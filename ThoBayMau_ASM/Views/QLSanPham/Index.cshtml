@model IEnumerable<ThoBayMau_ASM.Models.SanPham>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Product types management</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="QLSanPham" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus"></i>Create new category</a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped">
        <thead>
            <th>ID</th>
            <th>Tên</th>
            <th>Hình ảnh</th>
            <th>Mô tả</th>
            <th>Trạng thái</th>
            <th>Mã loại sản phẩm</th>
            <th>Sửa</th>
            <th>Xóa</th>
            <th>Chi tiết</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Ten</td>
                    <td></td>
                    <td>@item.Mota</td>
                    <td>@item.TrangThai</td>
                    <td>@item.LoaiSPId</td>
                    <td class="">

                        <a asp-action="Edit" asp-route-id=@item.Id class="btn btn-primary" style=""><i class="bi bi-pencil-square"></i></a>
                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-primary"><i class="bi bi-trash3-fill"></i></a>
                    </td>
                    <td>
                        <a data-bs-toggle="collapse" href="#@item.Id" role="button" aria-expanded="false"
                           aria-controls="@item.Id" style="font-size: 30px"><i class="bi bi-plus-circle"></i></a>
                    </td>
                </tr>
                <tr class="collapse" id="@item.Id">

                    <td colspan="8">
                        <p style="text-align:center"><strong>Chi tiết sản phẩm</strong></p>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>
