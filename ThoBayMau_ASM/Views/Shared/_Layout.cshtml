<style>
    #txt-frm-email{
        width:400px;
    }

    #txt-frm-email-submit {
        width:100px;
        border:none;
        color:white;
        background-color: #17a2b8;
    }

    #txt-frm-email-submit:hover {
        background-color: #34919f;
    }

    #ftco-nav .navbar-nav .nav-item a, #ftco-nav .scrolled .nav-item a {
        text-transform:initial;
        font-size:15px;
        color:black;
    }

    #ftco-nav .navbar-nav .nav-item a:hover, #ftco-nav.scrolled .nav-item a:hover {
        color: #17a2b8;
    }

</style>
<body class="goto-here">
    <partial name="_notification" />
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light px-5" id="ftco-navbar">
        <div class="container-fluid">
            <a class="navbar-brand me-5" asp-action="Index" asp-controller="Home"><img src="~/img/logo/pethouses_logo_1.png" width="150px" /></a>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Nhập tên sản phẩm" aria-label="Search">
            </form>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="color:black;">Menu</span>
            </button>
            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active"><a asp-action="Index" asp-controller="Home" class="nav-link">Trang chủ</a></li>
                    <li class="nav-item"><a asp-action="Shop_list" asp-controller="Home" class="nav-link">Sản phẩm</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="About" class="nav-link">Về chúng tôi</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Contact" class="nav-link">Liên hệ</a></li>
                    <li class="nav-item cta cta-colored"><a asp-action="Index" asp-controller="GioHang" class="nav-link"><span class="icon-shopping_cart"></span>[0]</a></li>
                    @if (Account != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <b>Chào @Account.TenTK</b>
                            </a>
                            <ul class="dropdown-menu mt-0">
                                <li><a class="dropdown-item" asp-action="TTDH" asp-controller="GioHang">Thông tin đơn hàng</a></li>
                                <li><a class="dropdown-item" asp-action="Logout" asp-controller="DangNhapDangKi">Đăng xuất</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item cta cta-colored"><a asp-action="Login" asp-controller="DangNhapDangKi" class="nav-link">Đăng nhập</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <!-- END nav -->
    @RenderBody()
    <section class="ftco-section ftco-no-pt ftco-no-pb py-5 bg-light">
        <div class="container py-4">
            <div class="row d-flex justify-content-center py-5">
                <div class="col-md-6">
                    <h2 style="font-size: 22px;" class="mb-0">Theo dõi bản tin của chúng tôi</h2>
                    <span>Nhận thông tin cập nhật qua email về các cửa hàng mới nhất và ưu đãi đặc biệt của chúng tôi</span>
                </div>
                <div class="col-md-6 d-flex align-items-center">
                    <form action="#" class="frm-email">
                        <div class="form-group d-flex">
                            <input id="txt-frm-email" type="text" class="form-control" placeholder="Nhập địa chỉ email">
                            <input id="txt-frm-email-submit" type="submit" value="Gửi">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <footer class="ftco-footer ftco-section">
        <div class="container">
            <div class="row">
                <div class="mouse">
                    <a href="#" class="mouse-icon">
                        <div class="mouse-wheel"><span class="ion-ios-arrow-up"></span></div>
                    </a>
                </div>
            </div>
            <div class="row mb-5">
                <div class="col-md">
