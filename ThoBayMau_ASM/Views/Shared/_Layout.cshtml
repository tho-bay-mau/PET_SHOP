    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <link rel="stylesheet" href="/vega/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="/vega/css/animate.css">

    <link rel="stylesheet" href="/vega/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/vega/css/owl.theme.default.min.css">
