@model IEnumerable<ThoBayMau_ASM.Models.TaiKhoan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var pagingmodel = new ThoBayMau_ASM.Helpers.PagingModel()
            {
                currentpage = (int)(@ViewBag.CurrentPage),
                countpages = (int)(@ViewBag.CountPages),
                generateUrl = (int? p) => Url.Page("/TaiKhoan/Index", new { p = p })
    };
}

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="container mt-1">
                <div class="cancel-dndk d-flex flex-row-reverse">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Tab panes -->
                <div class="tab-content px-5 pb-3">
                    <div class="container tab-pane active">
                        <form name="frm_Delete" asp-action="Delete" method="POST">
                            <div class="mb-3">
                                <input id="txt_ID" class="visually-hidden" type="text" name="txt_ID" />
                            </div>
                            <div class="mb-3 text-center">
                                <h5>Bạn muốn xóa tài khoản này không?</h5>
                            </div>
                            <div class="d-flex justify-content-evenly text-center">
                                <button type="submit" class="btn btn-primary" style="width:100px;">
                                    Có
                                </button>
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" aria-label="Close" style="width:100px;">
                                    Không
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Quản lý tài khoản</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus"></i>Tạo mới</a>
        </div>
    </div>
    <br /><br />
    <style>
        th{
            min-width:130px;
            color:black;
        }
    </style>
    <div class="table-responsive">
        <table class="table align-middle table-condensed table-hover text-center">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TenTK)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MatKhau)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SDT)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DiaChi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NgayDangKy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LoaiTK)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TrangThai)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.TenTK
                        </td>
                        <td>
                            @item.MatKhau
                        </td>
                        <td>
                            @item.SDT
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.DiaChi
                        </td>
                        <td>
                            @item.NgayDangKy.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @if (item.LoaiTK)
                            {
                                <text>Admin</text>
                            }
                            else
                            {
                                <text>User</text>
                            }
                        </td>
                        <td>
                            @if (item.TrangThai)
                            {
                                <div class="form-check d-flex align-items-center justify-content-center">
                                    <input class="form-check-input" style="background-image:none; background-color:#2ECC71;filter:none" type="radio" checked>
                                </div>
                            }
                            else
                            {
                                <div class="form-check d-flex align-items-center justify-content-center">
                                    <input class="form-check-input" style="background-image:none; background-color:#E74C3C;filter:none;" type="radio" checked>
                                </div>
                            }
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop" data-id="@item.Id" onclick="setId(this)">
                                <i class="bi bi-trash3"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<partial name="_Paging" model="pagingmodel" />