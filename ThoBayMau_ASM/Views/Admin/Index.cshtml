@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .product-name {
        white-space: initial;
        overflow: hidden;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        display: -webkit-box;
        height: 40px;
    }
</style>

<div class="cotainer">
    <div>
        <div class="row">
            <div class="col-md-6">
                <h5 class="text-center">Doanh thu 6 tháng gần nhất</h5>
                <br />
                <canvas id="chartUser"></canvas>
            </div>
            <div class="col-md-6">
                <h5 class="text-center">Doanh thu 7 ngày gần nhất</h5>
                <br />
                <canvas id="chartDay"></canvas>
            </div>
        </div>
        
        <br />
        <div class="row">
            <div class="col-md-5">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Năm</th>
                            <th>Tháng</th>
                            <th>Doanh Thu</th>
                        </tr>
                    </thead>
                    <h5 class="text-center">Tổng doanh thu của shop</h5>
                    <tbody id="load_data"></tbody>
                </table>
            </div>
            <div class="col-md-7">
                <h5 class="text-center">Top 5 sản phẩm bán chạy</h5>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th >Tên</th>
                            <th>Số lượng</th>
                        </tr>
                    </thead>
                    @foreach (var item in ViewBag.SPTop5)
                    {
                        <tbody>
                            <tr>
                                <th class="product-name">@item.Ten</th>
                                <th>@item.SoLuong</th>
                            </tr>
                        </tbody>

                    }
                    
                </table>
            </div>
        </div>
        
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/Scripts/chart.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    $.ajax({
        type: "GET",
        url: "@Url.Action("ThongKeDoanhThuTheoThang", "Admin")",
        dataType: "json",
        success: function (data) {
            console.log(data);
            var ctx = document.getElementById('chartUser');

            var labels = [];
            var userCounts = [];
            // Mảng các màu cho các thanh cột
            var barColors = ['#29BFDA', '#FF5733', '#9A33FF', '#33FF57', '#FF33C7', '#33A3FF'];
            for (var i = 0; i < Math.min(data.length, 6); i++) {
                labels.push(data[i].thang + "/" + data[i].nam);
                userCounts.push(data[i].doanhThu);
            }

            var barChartData = {
                labels: labels,
                datasets: [{
                    label: 'vnđ',
                    data: userCounts,
                    borderColor: '#FFFFFF',
                    backgroundColor: barColors,
                    tension: 0.1,
                    barThickness: 60

                }]
            };
            var myBarChart = new Chart(ctx, {
                type: 'bar',
                data: barChartData,
            });
            load_data(data);
        }
    });
    function load_data(data) {
        var strHtml = "";
        data.forEach(function (item, index) {
            strHtml += "<tr>";
            strHtml += "<td>" + item.nam + "</td>";
            strHtml += "<td>" + item.thang + "</td>";
            strHtml += "<td>" + item.doanhThu + "vnđ" + "</td>";
            strHtml += "</tr>";
        });
        $("#load_data").html(strHtml);
    };
    $.ajax({
        type: "GET",
        url: "@Url.Action("ThongKeDoanhThuTheoNgay", "Admin")",
        dataType: "json",
        success: function (data) {
            console.log(data);
            var ctx = document.getElementById('chartDay');

            var labels = [];
            var userCounts = [];
            // Mảng các màu cho các thanh cột
            var barColors = ['#29BFDA', '#FF5733', '#9A33FF', '#33FF57', '#FF33C7', '#33A3FF'];
            for (var i = 0; i < Math.min(data.length, 7); i++) {
                labels.push("Ngày " + data[i].ngay + "/" + data[i].thang);
                userCounts.push(data[i].doanhThu);
            }
            var barChartData = {
                labels: labels,
                datasets: [{
                    label: 'vnđ',
                    data: userCounts,
                    borderColor: '#FFFFFF',
                    backgroundColor: barColors,
                    tension: 0.1,
                    barThickness: 60

                }]
            };
            var myBarChart = new Chart(ctx, {
                type: 'bar',
                data: barChartData,
            });
            
        }
    });
</script>



