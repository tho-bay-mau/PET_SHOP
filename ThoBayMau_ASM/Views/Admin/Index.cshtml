@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Index Category</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus"></i>Create new category</a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped">
        <thead>
        <th>Category Name</th>
        <th>Display Order</th>
        <th>Edit</th>
        <th>Delete</th>
        </thead>
        <tbody>
            
                <tr>
                    <td>Name</td>
                    <td>DisplayOrder</td>
                    <td>

                        <a asp-controller="Category" asp-action="Edit" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                    </td>
                    <td>
                        <a asp-controller="Category" asp-action="Delete" class="btn btn-primary"><i class="bi bi-trash3-fill"></i></a>
                    </td>
                </tr>
            
        </tbody>
    </table>
</div>


