@using ThoBayMau_ASM.Models;
@model TaiKhoan
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng nhập</title>

    <link rel="stylesheet" href="~/cssdndk/css/styles.min.css" />
    <link rel="stylesheet" href="~//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<style>
    .social-btn{
        color:black;
    }
    .social-btn:hover{
        background-color: #E5E5E5;
        color: black;
    }
</style>

<body>
    <partial name="_notification" />
    <!--  Body Wrapper -->
    <div style="background-image: url('https://i0.wp.com/thatnhucuocsong.com.vn/wp-content/uploads/2022/02/background-banner-blue-do-hoa.jpg?ssl=1')" class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <a href="#" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                    <img src="~/img/logo/pethouses_logo_1.png" width="180" alt="" />
                                </a>
                                <form asp-action="Login" asp-controller="DangNhapDangKi" asp-route-returnUrl="@ViewBag.ReturnUrl" method="post" class="form">
                                    <div class="mb-3">
                                        <label class="form-label">Tên tài khoản</label>
                                        <input type="text" asp-for="TenTK" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                                    </div>
                                    <div class="mb-4">
                                        <label for="exampleInputPassword1" class="form-label">Mật khẩu</label>
                                        <input type="password" asp-for="MatKhau" class="form-control" id="exampleInputPassword1">
                                        <span class="text-danger">@ViewBag.ErrPassword</span>
                                    </div>
                                    <div class="row">
                                        <div class="d-flex align-items-center justify-content-between mb-4">
                                            <a class="text-primary fw-bold" href="@Url.Action("Index","Home")">Trang chủ</a>
                                            <a class="text-primary fw-bold" asp-action="GuiMail" asp-controller="DangNhapDangKi">Quên mật khẩu ?</a>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-3 rounded-2">Đăng nhập</button>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <p class="fs-4 mb-0 fw-bold">Chưa có tài khoản ?</p>
                                        <a class="text-primary fw-bold ms-2" href="~/DangNhapDangKi/Signup">Đăng ký</a>
                                    </div>
                                    <hr />
                                    <a class="form-control social-btn w-100 py-8 fs-4 rounded-2 text-center" asp-action="LoginByGoogle" asp-controller="DangNhapDangKi">
                                        <span class="social-logo-wrapper">
                                            <img class="social-logo" src="https://auth.openai.com/assets/google-logo-DXjxL3jJ.svg" alt="Google logo">
                                        </span>
                                        <span class="social-text">Tiếp tục với Google</span>
                                    </a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>