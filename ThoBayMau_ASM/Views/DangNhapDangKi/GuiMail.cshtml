@using ThoBayMau_ASM.Models;
@model TaiKhoan
@{
    ViewData["Title"] = "GuiMail";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <!-- Phần head của bạn -->
</head>
<body>
    <div class="container">
        <h2>Quên Mật Khẩu</h2>
        <form id="quenMatKhauForm" method="post">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <input type="submit" id="submitBtn" value="Gửi Yêu Cầu">
        </form>
    </div>

    <script>
        $(document).ready(function () {
            $('#quenMatKhauForm').submit(function (e) {
                e.preventDefault();
                var email = $('#email').val();
                $.ajax({
                    url: '@Url.Action("GuiMail", "DangNhapDangKi")',
                    type: 'POST',
                    data: { email: email },
                    success: function (response) {
                        if (response.success) {
                            var confirmationCode = response.confirmationCode;
                            alert('Một mã xác nhận đã được gửi đến email của bạn. Vui lòng kiểm tra email và nhập mã xác nhận để đặt lại mật khẩu.');
                            // Redirect to password reset page with confirmation code
                        } else {
                            alert(response.responseText);
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi. Vui lòng thử lại sau.');
                    }
                });
            });
        });
    </script>
</body>
</html>

